<div>
    <div id="background-image-player">
        
            <div id="nav-bar">
                <div id="home-button-div" style="overflow-y: scroll">
                    <a href="/home" class="btn">
                        <img src="/images/homelink-white.png" class="profile-button" alt="HOME">
                    </a>
                </div>
                <div class="playlist-nav-button">
                <a href="/playlist" style="color: cornsilk">Playlist</a>
                </div>
            </div>
            <div id="player-body">
            <h1 style="font-size: 60px">Player</h1>

            <div id="addAudio">
                <input style="display: none" id="playlist-id" value="{{id}}">
                <input type="button" value="PLAY" onclick="play()">
            </div>
            <br><br>

            <form action="/playlist/create" method="POST">
                <label for="">Give a name to the playlist</label>
                <input type="text" name="playlistName">
                <button type="submit" style="color: cornsilk">Create</button>
            </form>

            {{#each track}}
            <div class="track-container">
                <h4>{{this.name}}</h4>
                {{#if ../userHasPlaylists}}
                <form action="/playlist/add/{{this.id}}" method="POST">
                    <select id="playlist-button" name="playlist">
                        {{#each ../userInfo.playlists}}
                        <option value="{{this.id}}">{{this.playlistName}}</option>
                        {{/each}}
                    </select>
                    <button class="player-button" type="submit">Add to playlist</button>
                </form>
                {{/if}}
            </div>
            {{/each}}


            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
            <script src="/javascripts/playerScript.js"></script>
        </div>
    </div>
</div>