<div>
    <div id="background-image-login">
        <div class="form-size">

            <form action="/login" method="POST">
                <h2 style="font-size: 60px">Login</h2>
                <br>
                <div class="form-group row">
                    <label for="name" class="col-2 col-form-label">Username:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="username" id="username" placeholder="Enter username">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-2 col-form-label">Password:</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Enter password">
                    </div>
                </div>
                <button type="submit" id="login-submit-button">Submit</button>

                <p>
                {{#if errorMessage}}

                <p style="font-size: 25px">{{errorMessage}}</p>

                {{/if}}
                </p>

                <div class="signin-link" style="text-align: center">
                    <p>Don't have an account?</p>
                    <a href="/signup" style="color: cornsilk">Sign up!</a>
                </div>
            </form>

        </div>
        
    {{#if errorMessage}}

        <p>{{errorMessage}}</p>
    
    {{/if}}
    </div>
</div>